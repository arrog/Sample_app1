}

form, .form-stacked {

  label {
    font-weight: bold;
  }
  
  input[type=text], input[type=email], input[type=password], input[type=number] {
    background: #EEE;
    border: 1px solid #666A73;
    font-size: 14px;
    line-height: 26px;
    height: 32px;
    padding: 0px 10px;
  }
  	
  /* Don't forget to update tinymce's ui.css stylesheet */
  textarea {
    background: #EEE;
    border: 1px solid #666A73;
  }
  
  
  .control-group {
    position: relative;
    margin: 20px 0px 0px 0px;

    .control-label { display: inline; }

    .help-block { margin: 0; }

    .help-right {
      top: 0;
      right: 5px;
      position: absolute;
    }

    .controls {
      margin-top: 5px;
    }

    &:first-child {
      margin-top: 0;
    }
  }

  .field, .actions {
    margin-top: 20px;
  }
}

form.form-vertical {
  label {
    margin: 20px 0px 0px 2px;
  }
}

form.ajust-input {
  input[type=text], input[type=email], input[type=password], textarea {
    width: 100%;
    @include box-sizing(border-box);
  }
}

input.ajust-input, textarea.ajust-input {
  width: 100%;
  @include box-sizing(border-box);
}



