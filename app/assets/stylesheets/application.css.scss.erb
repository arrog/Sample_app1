@font-face {
    font-family: 'gotham';
    src: url(font-path('gotham.eot') + "?#iefix") format('embedded-opentype'),
         url(font-path('gotham.woff')) format('woff'), 
         url(font-path('gotham.ttf'))  format('truetype'),
         url(font-path('gotham.svg') + "#gotham") format('svg');
}

@font-face {
    font-family: 'bebasneue-webfont';
    src: url(font-path('bebasneue-webfont.eot') + "?#iefix") format('embedded-opentype'),
         url(font-path('bebasneue-webfont.woff')) format('woff'), 
         url(font-path('bebasneue-webfont.ttf'))  format('truetype'),
         url(font-path('bebasneue-webfont.svg') + "#bebasneue-webfont") format('svg');
}

h1 a, h2 a, h3 a, h4 a, h5 a {
  color: $mainColor;
}

h1.title, h2.title, h3.title, h4.title, h5.title {
  @include border-bottom;
	font-family: 'gotham';
  margin-bottom: 20px;
}

.span1, .span2, .span3, .span4, .span5, .span6, .span7, .span8, .span9, .span10, .span11, .span12 {
  > .new-widget:first-child {
    margin-top: 0px;
  }
} 

hr {
  border-top: 1px solid #AAA;
  border-bottom: 1px solid #e5e5e5;
}

em > a {
  font-style: normal;
  color: $mainColor;
}

.overflow {
  color: red;
}

form, .form-stacked {

  label {
    font-weight: bold;
  }
  
  input[type=text], input[type=email], input[type=password], input[type=number] {
    background: #EEE;
    border: 1px solid #666A73;
    font-size: 14px;
    line-height: 26px;
    height: 32px;
    padding: 0px 10px;
  }
  	
  /* Don't forget to update tinymce's ui.css stylesheet */
  textarea {
    background: #EEE;
    border: 1px solid #666A73;
  }
  
  
  .control-group {
    position: relative;
    margin: 20px 0px 0px 0px;

    .control-label { display: inline; }

    .help-block { margin: 0; }

    .help-right {
      top: 0;
      right: 5px;
      position: absolute;
    }

    .controls {
      margin-top: 5px;
    }

    &:first-child {
      margin-top: 0;
    }
  }

  .field, .actions {
    margin-top: 20px;
  }
}

form.form-vertical {
  label {
    margin: 20px 0px 0px 2px;
  }
}

form.ajust-input {
  input[type=text], input[type=email], input[type=password], textarea {
    width: 100%;
    @include box-sizing(border-box);
  }
}

input.ajust-input, textarea.ajust-input {
  width: 100%;
  @include box-sizing(border-box);
}

