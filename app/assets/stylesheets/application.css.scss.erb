@font-face {
    font-family: 'gotham';
    src: url(font-path('gotham.eot') + "?#iefix") format('embedded-opentype'),
         url(font-path('gotham.woff')) format('woff'), 
         url(font-path('gotham.ttf'))  format('truetype'),
         url(font-path('gotham.svg') + "#gotham") format('svg');
}

@font-face {
    font-family: 'bebasneue-webfont';
