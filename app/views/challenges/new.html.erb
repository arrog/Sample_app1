<% provide(:title, 'Sign up') %>
<h1>Create a debate</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@challenge) do |f| %>
	  
	  <%= render '/shared/error_messages', object: f.object %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :context %>
      <%= f.text_field :context %>

      <%= f.label :type_of_debate %>
      <%= f.text_field :type_of_debate%>

      <%= f.submit "Create a debate", class: "btn btn-large btn-primary" %>

    <% end %>

  </div>
</div>