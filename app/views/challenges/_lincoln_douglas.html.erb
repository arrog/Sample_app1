							<%= image_tag("place_vide.png") %>
						<%else%>
							<%= link_to image_tag("place_vide.png"), join_one_challenge_path(:challenge => @challenge), :method => :post %>
						<%end%>
					</div>
				</div>
					
				<div class='invitation-fermer'>
					<% if current_user && current_user.circle.any? %>
