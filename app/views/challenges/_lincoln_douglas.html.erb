					<%= f.select(:reciever_id, current_user.circle.collect {|a| [a.name, a.id]},{ :include_blank=>true }, { :class => 'selector'}) %>
					
					<%= f.hidden_field :position, :value => 1 %>
					<%= f.hidden_field :challenge_id, :value => @challenge.id %>
