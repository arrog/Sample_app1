	<div class="row" id="pousse-droite">
		<%= render "shared/argument_contre_badge", argument: @argument2 %>
	</div>
	
	<div class="row">
		<div class="row" id="photo-abonnement">
		<%= link_to (image_tag('moutons-abonnement.png', :alt => 'Moutoners')), root_path %>
		</div>
		<div class="row" id="intro2">
		 Cible: En marketing, ce qu'il faut toucher pour ne pas couler. 
		</div>
	</div>
	
	<div class="row" id="presentation1">
		<%= link_to(image_tag("presentation-centrale7-01.png"), abonnements_path)%>
	</div>
	
  </div>

