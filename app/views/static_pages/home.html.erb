		  <div id="video2_03">
				<div class="intro"><%= @citations2.last[0] %></div>
				<div class="introduction1">
				<span class="texte"><%= @citations2.last[1] %></span>
				</div>

				<div class="texte2"><%= @citations2.last[2] %></div>
		  </div>
		
			<%end%>	
				
		</div>
	  </div>
    </div>

