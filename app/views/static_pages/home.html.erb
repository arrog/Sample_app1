<section id="video_signup">
  <%= render :partial => "shared/flash_messages" %>
  
  <div class="container">
    <div class="row">
      <div class="span12">
        <div id="video">
          <div id="img">
            <div><%= image_tag "gra46.png" %></div>
          </div>
          <div id="hero">
            <div>
              <h2>Moutoner<br /> Le plus grand espace de débats.</h2>
              <h3>Débattre, pour sortir de la pensée unique<br />

              <%= link_to "Découvrir", list_path, :class => "btn btn-success btn-large" %>
				</br></br>
				<%= form_tag ("/search_results"), :method => "get", :class=>"search_form" do %>
				  <%= text_field_tag ("search"), nil, :class => 'search_input',
				    :onblur=>"if(this.value=='')this.setAttribute('class', 'search_input');",
				    :onfocus=>"this.setAttribute('class', 'search_input_clear');"
				 %>
				<% end %>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>

<section id="explanations">
  <div class="container">
    <div class="row">
      <div class="span4">
        <div class="explanation">
          <div class="image"><%= link_to image_tag("debats.png"), debates_path %></div>
        </div>
      </div>
      <div class="span4">
        <div class="explanation">
          <div class="image"><%= link_to image_tag("experts.png"), doulins_path %></div>
        </div>
      </div>
      <div class="span4">
        <div class="explanation">
          <div class="image"><%= link_to image_tag("dialectique.png"), challenges_path %></div>
        </div>
      </div>
    </div>
  </div>
</section>
  
	