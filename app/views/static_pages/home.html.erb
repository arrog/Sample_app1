<section id="video_signup">
	
  <div class="container">
	<div class="row">
		<div class="row" id="intro">
			Mieux vaut être un mouton noir, qu'un mouton de panurge.
		</div>
	</div>		
	
		
    <div class="row">
      <div class="span11" id ="holy">
  
		<div id="video">
		<% if !signed_in?%>
          <div id="hero">
            <div>
	
              <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
			  <%= devise_error_messages! %>
			  <div class="bouton">
			  	INSCRIVEZ-VOUS     GRATUITEMENT
			  </div>
			  <div> 
			    <%= f.text_field :name, placeholder: "NOM", class: "fields" %>
			  </div>
			  <div>
			    <%= f.email_field :email, :autofocus => true, placeholder:"EMAIL", class: "fields" %>
			  </div>  
			  <div>	
			    <%= f.password_field :password, placeholder:"MOT DE PASSE", class: "fields2" %>
			  </div>
			  <div><%= f.submit "VALIDER", :class => "validation"%></div>
			  <div class="inscriptionface">INSCRIPTION VIA <%= link_to "FACEBOOK", user_omniauth_authorize_path(:facebook),class: "via"%> ou <%= link_to "GOOGLE", user_omniauth_authorize_path(:google_oauth2),class: "via"%></div>
			    <% end %>
			</div>
		  </div>
			
          <div id="video0">
				<div class="introduction1">
				<span class="texte"><%= @citations.first %></span>
				</div>

				<div class="texte2">Débattez<span id="mydiv" class="texte3"> <span class="rotate"> en public., en groupe., entre amis.,entre équipes.</span></div>
				
		  </div>

				
			<%else%>
		  <div id="connecte">
					<div class="row">
						<div class="span2">
							<div class="image1">
								<%= link_to image_tag(current_user.avatar.url(:medium)), current_user, class: "image"%>
							</div>
							<div class="nom">
								<%= link_to current_user.fitting_name, current_user%>
							</div>
						</div>
					</div>
					
				<div class="row" id="stats-profil">
					<div class="texte5"><%= link_to current_user.notifications, current_user, class: "texte5"%></div> <div class="texte2"><%= link_to "Notifications", current_user, class: "texte2"%></div>
				</div>
				<div class="row" id="stats-profil">
					<div class="texte5"><%= link_to current_user.notifications2.count, current_user, class: "texte5"%></div> <div class="texte2"><%= link_to "Défi(s) en cours", current_user, class: "texte2"%></div>
				</div>
				<div class="row" id="stats-profil">
					<div class="texte5"><%= link_to current_user.invitation_request.count, current_user, class: "texte5"%></div> <div class="texte2"><%= link_to "Invitation(s)", current_user, class: "texte2"%></div>
				</div>				
		  </div>
		  <div id="video2_0">
				<div class="intro"><%= @citations2.first[0] %></div>
				<div class="introduction1">
				<span class="texte"><%= @citations2.first[1] %></span>
				</div>

				<%= image_tag("fleche-droite.png", class: "fleche10")%>
				<div class="texte2"><%= @citations2.first[2] %></div>
		  </div>
		  <div id="video2_01">
				<div class="intro"><%= @citations2.second[0] %></div>
				<div class="introduction1">
				<span class="texte"><%= @citations2.second[1] %></span>
				</div>

				<%= image_tag("fleche-droite.png", class: "fleche11")%>
				<div class="texte2"><%= @citations2.second[2] %></div>
		  </div>
		  <div id="video2_02">
				<div class="intro"><%= @citations2.third[0] %></div>
				<div class="introduction1">
				<span class="texte"><%= @citations2.third[1] %></span>
				</div>
				<div class="texte2"><%= @citations2.third[2] %></div>
		  </div>
		
			<%end%>	
				
		</div>
	  </div>
    </div>

	<% if Doulin.any?%>
		<%= render "shared/home_doulin", doulin: @doulin%>
	<% end %>
	
	<div class="row" id ="explanation1">

        <div class="explanation1">
		<%= link_to image_tag('ouvertb.jpg'), debats_path, class: "image1-expl"%>
		<%= link_to image_tag('ouvertbleu.jpg'), debats_path, class: "image2-expl"%>
