<section id="video_signup">
  <%= render :partial => "shared/flash_messages" %>
  
  <div class="container">

	<div class="row">
		<div class="row" id="intro">
			Mieux vaut être un mouton noir, qu'un mouton de panurge.
		</div>
	</div>
    <div class="row">
      <div class="span11" id ="holy">
        
		<div id="video">
		<% if !signed_in?%>
          <div id="hero">
            <div>
	
              <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
			  <%= devise_error_messages! %>
			  <div class="bouton">
			  	INSCRIS-TOI     GRATUITEMENT
			  </div>
			  <div> 
			    <%= f.text_field :name, placeholder: "NOM", class: "fields" %>
			  </div>
			  <div>
			    <%= f.email_field :email, :autofocus => true, placeholder:"EMAIL", class: "fields" %>
			  </div>  
			  <div>	
			    <%= f.password_field :password, placeholder:"MOT DE PASSE", class: "fields2" %>
			  </div>
			  <div><%= f.submit "VALIDER", :class => "validation"%></div>
			  <div class="inscriptionface"><%= link_to "INSCRIPTION VIA FACEBOOK", user_omniauth_authorize_path(:facebook),
			  													class: "via"%></div>
			    <% end %>
			</div>
		  </div>
			
          <div id="video0">
				<div class="introduction1">
				<span class="texte"><%= @citations.first %></span>
				</div>

				<%= image_tag("fleche-droite.png", class: "fleche01")%>
				<div class="texte2">Argumente. Conteste. Vote. Défie. Juge. Débats.</div>
		  </div>
		
		  <div id="video01">
				<div class="introduction1">
				<span class="texte"> <%= @citations.second%></span>
				</div>
				<%= image_tag("fleche-droite.png", class: "fleche02")%>
				<div class="texte2">Argumente. Conteste. Vote. Défie. Juge. Débats.</div>
		  </div>

		  <div id="video02">
				<div class="introduction1">
				<span class="texte"> <%= @citations.third%></span>
				</div>
				<%= image_tag("fleche-droite.png", class: "fleche03")%>
				<div class="texte2">Argumente. Conteste. Vote. Défie. Juge. Débats.</div>
		  </div>
		  <div id="video03">
				<div class="introduction1">
				<span class="texte"> <%= @citations.last%></span>
				</div>
				<div class="texte2">Argumente. Conteste. Vote. Défie. Juge. Débats.</div>
		  </div>				
		
			<%else%>
		  <div id="connecte">
					<div class="row">
						<div class="span2">
							<div class="image1">
								<%= link_to image_tag(current_user.avatar.url(:medium)), current_user, class: "image"%>
							</div>
							<div class="nom">
								<%= link_to current_user.fitting_name, current_user, class: "nom"%>
							</div>
						</div>
					</div>
					
				<div class="row" id="stats-profil">
					<div class="texte5"><%= link_to current_user.notifications, current_user, class: "texte5"%></div> <div class="texte2">Notification(s)</div>
				</div>
				<div class="row" id="stats-profil">
					<div class="texte5"><%= link_to current_user.notifications2.count, current_user, class: "texte5"%></div> <div class="texte2">Défi(s) en cours</div>
				</div>
				<div class="row" id="stats-profil">
					<div class="texte5"><%= link_to current_user.invitation_request.count, current_user, class: "texte5"%></div> <div class="texte2">Invitations</div>
				</div>				
		  </div>
		  <div id="video2_0">
				<div class="intro"><%= @citations2.first[0] %></div>
				<div class="introduction1">
				<span class="texte"><%= @citations2.first[1] %></span>
