<section id="open-debate">
	<div class="container">
	
	 <div class="row">
		<div class="span10 offset1">
			<div id="title">
				<div class="row">
					
					<div class="span5" id="gauche-ouvert">
						
					    <div class="image1">	
							<%= link_to image_tag(@debate.avatar.url(:medium)), @debate, class: "image"%>
							<%= image_tag("ouvert-im age.png", alt: "Moutoners", class: "image")%>							

							<div id="stats2">								

								<% if @debate.evaluations.any?%>
								<div class="reslutats-oui">
									<div class="oui1">OUI</div>
									<div class="oui3">|</div>
									<div class="oui2"><%=100*@debate.count_for / (@debate.count_neutral + @debate.count_for + @debate.count_against)%>%</div>
								</div>
								
								<div class="reslutats-suisse">
									<div class="suisse1"><%= image_tag "croix-suisse.png"%></div>
									<div class="suisse3">|</div>
									<div class="suisse2"><%=100*@debate.count_neutral / (@debate.count_neutral + @debate.count_for + @debate.count_against)%>%</div>
								</div>


								<div class="reslutats-non">
									<div class="non1">NON</div>
									<div class="non3">|</div>
									<div class="non2"><%=100*@debate.count_against / (@debate.count_neutral + @debate.count_for + @debate.count_against)%>%</div>
								</div>
								<%end%>
									
						     </div>
						</div>
					</div>
					
					<div class="span5" id="droite-ouvert">
						<div class="row" id="title2">
							<%= link_to @debate.title, @debate, class: "title3"%>
						</div>
						<div class="row" id="tags_list_doulin">
							<% @debate.tags.each do |l|%>
								<li><%= link_to l.name, list_path(:view =>'tag', :tag => l.name), class: "tags"%></li>
							<% end%>
						</div>
						<div class="row" id="content">
							<div class="content"><%= @debate.content%></div>
						</div>
						<div class="row" id="vote">
							<span class="vote2">VOTEZ</span>
							<% if current_user && @debate.in_deb?(current_user) && @debate.valeur_vote(current_user) == 1.0 %>
				 			<li class="oui-oui2"><%= link_to "OUI", vote_debate_path(@debate, type: "up"), method: "post", :class => "oui" %>
							</li>
							<% else%>
				 			<li class="oui-oui"><%= link_to "OUI", vote_debate_path(@debate, type: "up"), method: "post", :class => "oui" %>
							</li>							
							<% end%>
							<% if current_user && @debate.in_deb?(current_user) && @debate.valeur_vote(current_user) == 0.0 %>
							<li class="suisse-suisse2"><%= link_to image_tag("croix-suisse.png"), vote_debate_path(@debate, type: "neutral"), method: "post", class: "suisse" %></li>
							<% else%>
							<li class="suisse-suisse"><%= link_to image_tag("croix-suisse.png"), vote_debate_path(@debate, type: "neutral"), method: "post", class: "suisse" %></li>
							<%end%>
							<% if current_user && @debate.in_deb?(current_user) && @debate.valeur_vote(current_user) == -1.0 %>
							<li class="non-non2"><%= link_to "NON", vote_debate_path(@debate, type: "down"), method: "post", :class => "non" %></li>				
							<%else%>
							<li class="non-non"><%= link_to "NON", vote_debate_path(@debate, type: "down"), method: "post", :class => "non" %></li>							
							<%end%>
						</div>
						
						<div class="row" id="stats">
							<div class="stat1">
								<%= @debate.count_for+@debate.count_against + @debate.count_neutral%>
								<%= image_tag("icone-debat-3.png", alt: "Moutoners", class: "image")%>
								|

								<span class="stat2"><%= @debate.arguments.count%></span>
								<%= image_tag("icone-debat.png", alt: "Moutoners", class: "image")%>
								|

								<span class="stat2"><%= @debate.argcoms.count%></span>
								<%= image_tag("icone-debat-2.png", alt: "Moutoners", class: "image")%>
							</div>
						</div>
						
					</div>
					
	 			</div>
	 		</div>
	 	</div>
	   
		<div class="span1" id="follow">
			<div class="follow">
	   		<% if current_user && current_user.following?(@debate)%>
	   			<div class="texte2"><%= link_to"Fuir", unfollow_debate_path(@debate), class: "texte"%></div>
	   		<% else %>
	   			<div class="texte"><%= link_to"Suivre", follow_debate_path(@debate), class: "texte"%></div>
	   		<% end %>
	   			<div class="arrow-left"></div>
	   		</div>
	</div>
	
	   	<div class="span1" id="catcat">
			<div class="arrow-left"></div>   		
	   		<div class="image">
	   		<% if @debate.cat_id == 1 %>
	   			<%= link_to image_tag("cat-sports.png", :alt => 'Moutoners'), list_path(:cat => 1)%>
	   		<%elsif @debate.cat_id == 2 %>
	   			<%= link_to image_tag("cat-quotidien.png", :alt => 'Moutoners'), list_path(:cat => 2)%>
	   		<%elsif @debate.cat_id == 3 %>
	   			<%= link_to image_tag("cat-monde.png", :alt => 'Moutoners'), list_path(:cat => 3)%>
	   		<%elsif @debate.cat_id == 4 %>
	   			<%= link_to image_tag("cat-economie.png", :alt => 'Moutoners'), list_path(:cat => 4)%>
	   		<%elsif @debate.cat_id == 5 %>
	   			<%= link_to image_tag("cat-culture.png", :alt => 'Moutoners'), list_path(:cat => 5)%>
	   		<%elsif @debate.cat_id == 6 %>
	   		 	<%= link_to image_tag("cat-sciences.png", :alt => 'Moutoners'), list_path(:cat => 6)%>
	   		<%elsif @debate.cat_id == 7 %>
	   			<%= link_to image_tag("cat-philosophie.png", :alt => 'Moutoners'), list_path(:cat => 7)%>
	   		<%elsif @debate.cat_id == 8 %>
	   			<%= link_to image_tag("cat-societe.png", :alt => 'Moutoners'), list_path(:cat => 8)%>
	   		<%end%>
	   		</div>
	   	</div>

		</div>			
		

		
		<div class="row" id="arguments">

					<% if current_user && @debate.has_evaluation?(:votes, current_user) %>
					
						<div class="row" id="box-argument">
				   			<% if @debate.valeur_vote(current_user) == 1.0 %>
								<div class="pour">
				   				<%= render "shared/argument_form", argumentable: @debate, argument: current_user.arguments.new, position:1 %>
								</div>								
				   			<%elsif @debate.valeur_vote(current_user) == - 1.0 %> 
								<div class="contre">
				   				<%= render "shared/argument_contre_form", argumentable: @debate, argument: current_user.arguments.new, position:1 %>
								</div>
				   			<% else%>
								<div class="suisse">
				   				<%= render "shared/argument_neutre_form", argumentable: @debate, argument: current_user.arguments.new, position:1 %>
								</div>
				   			<% end %>
				    	</div>

						<div class="row" id="voter">
							<div class="texte-newarg">Contribue au débat!</div>
							<div class='texte2-newarg'>J'argumenterai plus tard</div>
							<div class="arrow-down-newarg"></div>
							<div class="arrow-up-newarg"></div>
						</div>
				
					<% else  %>
						<div class="row" id="voter">
							<% if current_user%>			
							<div class="texte">Vote, puis contribue au débat!</div>
							<%else%>
							<div class="texte"><%= link_to 'Vote, puis contribue au débat', new_user_session_path, class: "texte" %></div>
							<%end%>
						</div>
					<%end%>					
		</div>
		
		
		<div>
			<% @arguments.each do |argument| %>
			<div class="row" id="arguments-debate">
				<% if @debate.valeur_vote(argument.user) == 1.0 %>
				<div class="pour">
					<%= render "shared/argument_badge", :argument => argument, :argumentable => @debate %>
				</div>
				<%elsif @debate.valeur_vote(argument.user) == - 1.0 %> 
				<div class="contre">
					<%= render "shared/argument_contre_badge", :argument => argument, :argumentable => @debate %>
				</div>
				<% else%>
				<div class="suisse">
					<%= render "shared/argument_neutre_badge", :argument => argument, :argumentable => @debate %>
				</div>
				<% end %>

			</div>
			<%end%>
			
			
		</div>
		<div>
		</br></br>		</br>		</br>
		</div>
	</div>
	<% if @debate.state == "offline"%>
		<%= @debate.state%>
		<%= link_to "Mettre en ligne", publish_debate_path(@debate)%>	
	<% end%>
</section>
					